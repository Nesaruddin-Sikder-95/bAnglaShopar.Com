@model bAnglaShoper.ComEntities.Product
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Product</h2>
<form method="post" id="editProduct">
    <input name="ID" type="hidden" value="@Model.ID" />
    <label>Name</label>
    <input name="Name" value="@Model.Name"/>
    <label>Description</label>
    <input name="Description" value="@Model.Description"/>
    <label>Price</label>
    <input name="Price" value="@Model.Price"/>
    <button type="button" id="updateBtn">Update</button>
</form>

<script>
    $("#updateBtn").click(function () {
        $.ajax({
            type: 'POST',
            url: '/Product/Edit',
            data: $("#editProduct").serialize(),
        })
            .done(function (data) {
                // Data Show after the saving new product
                $("#tblContainer").html(data);
                //Create Product hide after save new product
                $("#actionContainer").html("");
            })
            .fail(function (XMLHttpRequest, textStatus, errorThrown) {
                alert("FAILED");
            })
    });
</script>



